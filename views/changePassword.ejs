<!DOCTYPE html>

<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/signup.css" />
  </head>
  <body>
    <div class="wrapper" style="height: 521px">
      <h2>Reset Password</h2>
      <form action="/password/postotp/changepassword" method="post">
        <div class="input-box">
          <input
            type="password"
            class="form-control p_input"
            name="password"
            placeholder="password"
          />

          <% if(dataLogin && dataLogin.some(error => error.param === 'password'
          )) { %>
          <div class="danger">
            <%= dataLogin.find(error => error.param === 'password').msg %>
          </div>
          <% } %>
        </div>

        <div class="input-box">
          <input
            type="password"
            id="password"
            name="confirmPassword"
            placeholder="Confirm password"
          />
          <% if(dataLogin && dataLogin.some(error => error.param ===
          'confirmPassword')) { %>
          <div class="danger">
            <%= dataLogin.find(error => error.param === 'confirmPassword').msg
            %>
          </div>
          <% } %>
        </div>

        <div class="input-box button">
          <input type="Submit" value="Change Password" />
        </div>
        <div class="text">
          <h3>Don't have an account? <a href="/">SignUp now</a></h3>
        </div>
      </form>
    </div>
  </body>
</html>
