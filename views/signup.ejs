<!DOCTYPE html>

<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   

    <link rel="stylesheet" href="/stylesheets/signup.css" />
  </head>
  <body>
    <div class="wrapper">
        <h2>Registration</h2>
        <form action="/" method="post">
         
        <div class="input-box">
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Enter your name"
           
          />

          <% if(data && data.some(error => error.param === 'name')) { %>
            <div class="danger"><%= data.find(error => error.param === 'name').msg %></div>
          <% } %>
        </div>

        <div class="input-box">
          <input
            type="text"
            class="form-control p_input"
            name="email"
            placeholder="Email"
           
          />

          <% if(data && data.some(error => error.param === 'email')) { %>
            <div class="danger"><%= data.find(error => error.param === 'email').msg %></div>
          <% } %>
        </div>

        

    
        <div class="input-box">
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Create password"
            
          />
          <% if(data && data.some(error => error.param === 'password')) { %>
            <div class="danger"><%= data.find(error => error.param === 'password').msg %></div>
          <% } %>
        </div>

        <div class="input-box">
          <input
            type="password"
            id="confirm_password"
            name="confirm_password"
            placeholder="Confirm password"
            
          />
          <% if(data && data.some(error => error.param === 'confirm_password')) { %>
            <div class="danger"><%= data.find(error => error.param === 'confirm_password').msg %></div>
          <% } %>
        </div>

        <div class="policy">
          <input type="checkbox"  />
          <h3>I accept all terms & condition</h3>
        </div>
        <div class="input-box button">
          <input type="Submit" value="Register Now" />
        </div>
        <div class="text">
          <h3>Already have an account? <a href="/login">Login now</a></h3>
        </div>
      </form>
    </div>
  </body>
</html>
